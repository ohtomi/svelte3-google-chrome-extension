{
  "manifest_version": 2,
  "name": "svelte3-google-chrome-extension",
  "version": "1.0.0",
  "description": "A sample extension for Google Chrome written in Svelte3",
  "browser_action": {
    "default_title": "Copy title",
    "default_popup": "index.html"
  },
  "author": "Kenichi Ohtomi",
  "homepage_url": "https://github.com/ohtomi/svelte3-google-chrome-extension",
  "permissions": [
    "http://*/*", "https://*/*",
    "tabs",
    "clipboardWrite",
    "storage"
  ]
}
